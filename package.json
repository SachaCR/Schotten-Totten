{
  "name": "schotten-totten",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest ./src",
    "test:watch": "jest ./src --watch",
    "build": "tsc",
    "doc": "typedoc --options typedoc.json",
    "fullBuild": "tsc",
    "prefullBuild:": "npm run test",
    "postfullBuild": "npm run doc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SachaCR.Schotten-Totten.git"
  },
  "author": "SachaCR",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SachaCR/Schotten-Totten.issues"
  },
  "homepage": "https://github.com/SachaCR#Schotten-Totten.readme",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "dyal": "^1.0.11",
    "jest": "^28.0.0",
    "jest-html-reporters": "^3.0.11",
    "typedoc": "^0.23.15",
    "uuid": "^9.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.1",
    "@types/ansi-colors": "^3.2.2",
    "@types/jest": "^27.5.2",
    "@types/uuid": "^9.0.0",
    "prettier": "^2.6.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.7.0",
    "typescript": "^4.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "documentation/coverage",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./documentation/test-report",
          "filename": "index.html",
          "openReport": false,
          "pageTitle": "Test Report"
        }
      ]
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "config"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts",
      "public/*"
    ],
    "verbose": false,
    "exec": "ts-node src/index.ts"
  },
  "volta": {
    "node": "18.8.0",
    "npm": "8.17.0"
  }
}
